{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "regex"
  ],
  "regexManagers": [
    {
        "datasourceTemplate": "github-releases",
        "depNameTemplate": "curl/curl",
        "extractVersionTemplate": "^curl-(?<version>.+?)$",
        "fileMatch": [
          "^tools/curl/manifest.yaml$"
        ],
        "matchStrings": [
          "version: \"?(?<currentValue>.*?)\"?\\n"
        ],
        "versioningTemplate": "regex:^(?<major>\\d+?)_(?<minor>\\d+?)_(?<patch>\\d+?)$"
    },
    {
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "containers/crun",
      "extractVersionTemplate": "^(?<version>\\d+\\.\\d+(\\.\\d+)??)$",
      "fileMatch": [
        "^tools/crun/manifest.yaml$"
      ],
      "matchStrings": [
        "version: \"?(?<currentValue>.*?)\"?\\n"
      ],
      "versioningTemplate": "loose"
    }
  ]
}