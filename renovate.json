{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "regex"
  ],
  "customDatasources": {
    "curl": {
      "defaultRegistryUrlTemplate": "https://api.github.com/repos/curl/curl/releases",
      "format": "json",
      "transformTemplates": [
        "{\"releases\": [ $[].{\"version\": name, \"releaseTimestamp\": created_at} ]}"
      ]
    }
  },
  "regexManagers": [
    {
        "datasourceTemplate": "custom.curl",
        "depNameTemplate": "curl/curl",
        "fileMatch": [
          "^tools/curl/manifest.yaml$"
        ],
        "matchStrings": [
          "version: \"?(?<currentValue>.*?)\"?\\n"
        ]
    },
    {
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "docker/compose",
      "extractVersionTemplate": "regex:^(?<version>\\d+\\.\\d+\\.\\d+)$",
      "fileMatch": [
        "^tools/docker-compose-v1/manifest.yaml$"
      ],
      "matchStrings": [
        "version: \"?(?<currentValue>.*?)\"?\\n"
      ]
    },
    {
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "fabioz/mu-repo",
      "extractVersionTemplate": "^mu_repo_(?<version>.+?)$",
      "fileMatch": [
        "^tools/mu-repo/manifest.yaml$"
      ],
      "matchStrings": [
        "version: \"?(?<currentValue>.*?)\"?\\n"
      ],
      "versioningTemplate": "regex:^(?<major>\\d+)_(?<minor>\\d+)_(?<patch>\\d+)$"
    },
    {
      "datasourceTemplate": "pypi",
      "depNameTemplate": "wordcloud",
      "fileMatch": [
        "^tools/wordcloud/manifest.yaml$"
      ],
      "matchStrings": [
        "version: \"?(?<currentValue>.*?)\"?\\n"
      ]
    }
  ]
}