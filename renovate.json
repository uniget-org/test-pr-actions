{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "regex"
  ],
  "customDatasources": {
    "curl": {
      "defaultRegistryUrlTemplate": "https://api.github.com/repos/curl/curl/releases",
      "format": "json",
      "transformTemplates": [
        "{\"releases\": [ $[].{\"version\": name, \"releaseTimestamp\": created_at} ]}"
      ]
    }
  },
  "regexManagers": [
    {
        "datasourceTemplate": "github-releases",
        "depNameTemplate": "curl/curl",
        "extractVersionTemplate": "^curl-(?<version>.+?)$",
        "fileMatch": [
          "^tools/curl/manifest.yaml$"
        ],
        "matchStrings": [
          "version: \"?(?<currentValue>.*?)\"?\\n"
        ],
        "versioningTemplate": "{{{ replace '_' '.' version }}}"
    }
  ]
}